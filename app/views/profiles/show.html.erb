<div class="main">
<div class="left">
<p id="notice"><%= notice %></p>
</div>
<div class="content">
<div class="new-edit">
<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @profile.image.url, style:"max-width:100%" %>
</p>

<p>
  <strong>User:</strong>
  <%= @profile.user.email %>
</p>
</div>
</div>
<div class="right">

<% if user_signed_in? %>
    
    <% if current_user.profile == nil %>
    <p><%= image_tag 'pro4.png', class:"rounded-circle" %></p>
    <% else %>
    <% if current_user.profile.image? %>        
      <p><%= image_tag current_user.profile.image.url, class:"rounded-circle" %>
      <%= current_user.email %>
      </p>    
     <% end %> 
    <% end %>
  <% end %>
  <%= link_to 'Back-Home', posts_path, class:"btn btn-info" %>  
</div>
</div>

